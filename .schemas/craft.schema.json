{
    "$id": "https://raw.githubusercontent.com/kilianpaquier/craft/main/.schemas/craft.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Craft",
    "description": "Craft configuration file",
    "type": "object",
    "additionalProperties": false,
    "$defs": {
        "ci": {
            "description": "CI definition to help generate specific files.",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "auth": {
                    "description": "Auth configurations for various features in CI.",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "maintenance": {
                            "description": "Maintenance auth strategy for the specified bot in maintenance option.",
                            "type": "string",
                            "enum": [
                                "github-app",
                                "github-token",
                                "personal-token"
                            ]
                        },
                        "release": {
                            "description": "Release auth strategy.",
                            "type": "string",
                            "enum": [
                                "github-app",
                                "github-token",
                                "personal-token"
                            ]
                        }
                    }
                },
                "docker": {
                    "description": "Docker definition.",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "port": {
                            "description": "Container port to override the default one, 3000.",
                            "type": "integer"
                        },
                        "registry": {
                            "description": "Docker registry associated to project. It will be used for CI docker build & push alongside chart image pull.",
                            "type": "string"
                        }
                    }
                },
                "deployment": {
                    "description": "deployment configuration.",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "auto": {
                            "description": "Whether to automatically deployment builds or not on default branch.",
                            "type": "boolean"
                        },
                        "platform": {
                            "description": "Deployment platform name.",
                            "type": "string",
                            "enum": [
                                "kubernetes",
                                "netlify",
                                "pages"
                            ]
                        }
                    },
                    "required": [
                        "platform"
                    ]
                },
                "helm": {
                    "description": "Helm definition.",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "path": {
                            "description": "Helm chart path (where to push the chart).",
                            "type": "string"
                        },
                        "publish": {
                            "description": "Publish configuration, whether to push the project helm chart on an helm repository or not.",
                            "type": "string",
                            "enum": [
                                "auto",
                                "manual",
                                "none"
                            ]
                        },
                        "registry": {
                            "description": "Helm registry associated to project. It will be used for CI helm push.",
                            "type": "string"
                        }
                    },
                    "allOf": [
                        {
                            "if": {
                                "required": [
                                    "registry"
                                ]
                            },
                            "then": {
                                "properties": {
                                    "publish": {
                                        "pattern": "^(auto|manual)$"
                                    }
                                }
                            }
                        }
                    ]
                },
                "name": {
                    "description": "CI Name.",
                    "default": "github",
                    "anyOf": [
                        {
                            "type": "string",
                            "enum": [
                                "github",
                                "gitlab"
                            ]
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "options": {
                    "description": "CI Options.",
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "type": "string",
                                "enum": [
                                    "codecov",
                                    "codeql",
                                    "labeler",
                                    "sonar"
                                ]
                            },
                            {
                                "type": "string"
                            }
                        ]
                    }
                },
                "release": {
                    "description": "Release specific configuration.",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "auto": {
                            "description": "Whether the release should run automatically.",
                            "type": "boolean"
                        },
                        "backmerge": {
                            "description": "Whether backmerging should be configured for main, staging and develop branches.",
                            "type": "boolean"
                        }
                    }
                }
            },
            "required": [
                "name"
            ],
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "release": false
                        }
                    },
                    "then": {
                        "properties": {
                            "auth": {
                                "properties": {
                                    "release": false
                                }
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "name": {
                                "const": "github"
                            }
                        },
                        "required": [
                            "release"
                        ]
                    },
                    "then": {
                        "properties": {
                            "auth": {
                                "required": [
                                    "release"
                                ]
                            }
                        },
                        "required": [
                            "auth"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "name": {
                                "const": "gitlab"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "auth": {
                                "properties": {
                                    "release": false
                                }
                            }
                        }
                    }
                }
            ]
        },
        "maintainer": {
            "description": "Maintainer definition",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "email": {
                    "description": "Maintainer email.",
                    "type": "string"
                },
                "name": {
                    "description": "Maintainer name (can be any entity, person name, group name, etc.).",
                    "type": "string"
                },
                "url": {
                    "description": "Maintainer URL.",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ]
        }
    },
    "properties": {
        "bot": {
            "description": "Bot in charge of keeping dependencies up to date.",
            "type": "string",
            "enum": [
                "dependabot",
                "renovate"
            ]
        },
        "ci": {
            "$ref": "#/$defs/ci"
        },
        "description": {
            "description": "Description, only useful when working with docker option and helm generations.",
            "type": "string"
        },
        "exclude": {
            "description": "List of parts to not generate during craft generation.",
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "string",
                        "enum": [
                            "goreleaser",
                            "makefile",
                            "pre-commit",
                            "shell"
                        ]
                    },
                    {
                        "type": "string"
                    }
                ]
            }
        },
        "include": {
            "description": "List of optional parts to generate during craft generation.",
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "string",
                        "enum": [
                            "pre-commit:auto-commit"
                        ]
                    },
                    {
                        "type": "string"
                    }
                ]
            }
        },
        "license": {
            "description": "License name.",
            "type": "string",
            "enum": [
                "agpl-3.0",
                "apache-2.0",
                "bsd-2-clause",
                "bsd-3-clause",
                "bsl-1.0",
                "cc0-1.0",
                "epl-2.0",
                "gpl-2.0",
                "gpl-3.0",
                "lgpl-2.1",
                "mit",
                "mpl-2.0",
                "unlicense"
            ]
        },
        "maintainers": {
            "description": "List of maintainers.",
            "type": "array",
            "items": {
                "$ref": "#/$defs/maintainer"
            },
            "minItems": 1
        },
        "platform": {
            "description": "Platform for README.md badges (automatically parsed with git origin URL by default).",
            "type": "string",
            "enum": [
                "bitbucket",
                "gitea",
                "github",
                "gitlab"
            ]
        }
    },
    "required": [
        "maintainers"
    ],
    "allOf": [
        {
            "if": {
                "properties": {
                    "platform": {
                        "const": "gitlab"
                    }
                }
            },
            "then": {
                "properties": {
                    "bot": {
                        "const": "renovate"
                    },
                    "ci": {
                        "properties": {
                            "auth": {
                                "properties": {
                                    "maintenance": false
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "bot": {
                        "const": "dependabot"
                    }
                }
            },
            "then": {
                "properties": {
                    "ci": {
                        "properties": {
                            "auth": {
                                "properties": {
                                    "maintenance": false
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "bot": {
                        "const": "renovate"
                    },
                    "ci": {
                        "properties": {
                            "name": {
                                "const": "github"
                            }
                        }
                    }
                },
                "required": [
                    "bot",
                    "ci"
                ]
            },
            "then": {
                "properties": {
                    "ci": {
                        "properties": {
                            "auth": {
                                "required": [
                                    "maintenance"
                                ]
                            }
                        },
                        "required": [
                            "auth"
                        ]
                    }
                }
            }
        }
    ]
}
