on:
  pull_request:
    types:
      - opened
      - reopened
      - synchronize
      - ready_for_review
  push:
    branches:
      - alpha
      - beta
      - dev
      - develop
      - development
      - next
      - staging
      - main
      - master
      - v[0-9]+.x
      - v[0-9]+.[0-9]+.x
  workflow_dispatch:

concurrency:
  group: ${{ github.workflow }}-${{ github.head_ref || github.ref_name }}
  cancel-in-progress: true

jobs:
  run-workflow:
    name: Run Workflow
    runs-on: ubuntu-latest
    if: ${{ (github.event_name == 'push' && github.ref_protected) || (github.event_name == 'pull_request' && !github.event.pull_request.draft) }}
    outputs:
      skip: ${{ steps.skip.outputs.skip }}
    permissions:
      pull-requests: read
    steps:
