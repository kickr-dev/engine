{{- $golang := hasKey .Languages "go" }}
{{- $helm := and .CI .CI.Helm }}
{{- $hugo := hasKey .Languages "hugo" }}
{{- $node := hasKey .Languages "node" }}

version: 2
enable-beta-ecosystems: true
updates:
{{- range list "github-actions" "gitsubmodule" }}

  - package-ecosystem: {{ . }}
    directory: /
    schedule:
      interval: daily
      time: "12:00"
      timezone: "Etc/UTC"
    groups:
      major/minor/patch:
        update-types:
          - major
          - minor
          - patch
    commit-message:
      include: scope
      prefix: ci
    cooldown:
      default-days: 5
{{- end }}

{{- if and .CI .CI.Docker }}

  - package-ecosystem: docker
    directory: /
    schedule:
      interval: daily
      time: "12:00"
      timezone: "Etc/UTC"
    groups:
      minor/patch:
        update-types:
          - minor
          - patch
    commit-message:
      include: scope
      prefix: chore
    cooldown:
      default-days: 5
{{- end }}

{{- if $helm }}

  - package-ecosystem: helm
    directory: /
    schedule:
      interval: daily
      time: "12:00"
      timezone: "Etc/UTC"
    groups:
      major/minor/patch:
        update-types:
