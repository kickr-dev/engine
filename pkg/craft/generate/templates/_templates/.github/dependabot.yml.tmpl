{{- $node := hasKey .Languages "node" }}
{{- $hugo := hasKey .Languages "hugo" }}
{{- $golang := hasKey .Languages "go" }}

version: 2
enable-beta-ecosystems: true
updates:
  - package-ecosystem: github-actions
    directory: /
    schedule:
      interval: daily
      time: "12:00"
      timezone: "Etc/UTC"
    groups:
      major/minor/patch:
        update-types:
          - major
          - minor
          - patch
    commit-message:
      include: scope
      prefix: ci

{{- if .Docker }}

  - package-ecosystem: docker
    directory: /
    schedule:
      interval: daily
      time: "12:00"
      timezone: "Etc/UTC"
    groups:
      minor/patch:
        update-types:
          - minor
          - patch
    commit-message:
      include: scope
      prefix: chore
{{- end }}

{{- if or $golang $hugo }}

  - package-ecosystem: gomod
    directory: /
    schedule:
      interval: daily
      time: "12:00"
      timezone: "Etc/UTC"
    groups:
      minor/patch:
        update-types:
          - minor
          - patch
    commit-message:
      include: scope
      prefix: chore
{{- end }}

{{- if $node }}
{{- $specifics := get .Languages "node" }}
{{- $manager := cutAfter $specifics.PackageManager "@" }}

  - package-ecosystem: {{ ternary "bun" "npm" (eq $manager "bun") }}
    directory: /
    schedule:
      interval: daily
      time: "12:00"
      timezone: "Etc/UTC"
    groups:
      minor:
        update-types:
          - minor
      patch:
        update-types:
          - patch
    commit-message:
      include: scope
      prefix: chore
{{- end }}
