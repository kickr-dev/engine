# Code generated by craft; DO NOT EDIT.

{{- $golang := hasKey .Languages "go" }}
{{- $shell := and (not (has "shell" .Exclude)) (gt (len (glob "*.*sh")) 0) }}

default_install_hook_types:
  - commit-msg
  - pre-commit

default_stages:
  - pre-commit

repos:
  - repo: https://github.com/compilerla/conventional-pre-commit
    rev: v4.0.0
    hooks:
      - id: conventional-pre-commit
        stages: [commit-msg]

  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v5.0.0
    hooks:
      - id: check-merge-conflict
      - id: end-of-file-fixer
      - id: mixed-line-ending
        args: [--fix=lf]
      - id: trailing-whitespace

{{- if and (not .CI) $shell }}

  - repo: https://github.com/koalaman/shellcheck-precommit
    rev: v0.10.0
    hooks:
      # see https://www.shellcheck.net/wiki/SC1071
      - id: shellcheck
        types_or: [bash, dash, ksh, sh, shell]
{{- end }}

{{- if and $golang (has "pre-commit:gomod-tidy" .Include) }}

  - repo: local
    hooks:
      - id: tidy
        name: go mod tidy
        entry: bash -c 'go mod tidy'
        language: system
{{- end }}
