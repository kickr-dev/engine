# Code generated by craft; DO NOT EDIT.

<<- $specifics := get .Languages "go" >>

version: 2

builds:
<<- range $name, $config := .Clis >>
  - main: ./cmd/<< $name >>
    env:
      - CGO_ENABLED=0
    ldflags:
      - -X << $specifics.Module >>/internal/build.branch={{ .Branch }}
      - -X << $specifics.Module >>/internal/build.commit={{ .Commit }}
      - -X << $specifics.Module >>/internal/build.date={{ .CommitDate }}
      - -X << $specifics.Module >>/internal/build.version={{ .Env.VERSION }}
    goos:
      - linux
      - windows
      - darwin
    goarch:
      - amd64
      - arm64
<<- end >>

announce:
  skip: true

changelog:
  disable: true

archives:
  - formats: tar.gz
    wrap_in_directory: false
    name_template: >-
      {{- .ProjectName }}_
      {{- .Os }}_
      {{- .Arch }}
      {{- if .Arm }}v{{ .Arm }}{{ end }}
    format_overrides:
      - goos: windows
        formats: zip

checksum:
  name_template: checksums.txt

nfpms:
<<- $maintainer := index .Maintainers 0 >>
  - maintainer: << $maintainer.Name >>
<<- if .License >>
    license: << .License | upper >>
<<- end >>
    file_name_template: >-
      {{- .ProjectName }}_
      {{- .Os }}_
      {{- .Arch }}
      {{- if .Arm }}v{{ .Arm }}{{ end }}
    formats:
      - apk
      - deb
      - rpm
